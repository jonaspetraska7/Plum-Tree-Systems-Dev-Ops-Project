{% extends 'base.html.twig' %}

{% block title %}Info Control{% endblock %}

{% block body %}

    <h1>List of info items:</h1>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <td>ID</td>
            <td>Section</td>
            <td>Text</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
            {% for i in infoitems %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.section }}</td>
                    <td>{{ i.text}}</td>
                    <td>
                        <a href="{{  path('infoshow', {id: i.id}) }}">
                            SHOW
                        </a>
                        |
                        <a href="{{  path('infodelete', {id: i.id}) }}">
                            DELETE
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
